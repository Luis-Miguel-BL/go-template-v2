    "version": "0.2.0",
    "configurations": [
      {
        "name": "Start Server",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/api/main.go",
        "dlvFlags": ["--check-go-version=false"],
        "cwd": "${workspaceFolder}/",
        "env": {
          "APP_AWS_ENDPOINT":"http://localhost:4566",
          "APP_AWS_REGION":"sa-east-1",
          "APP_AWS_SSM_LOAD_FROM_SSM":"false",
          "APP_ENVIRONMENT":"local"
        }
      },
      {
        "name": "Start Worker",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/worker/main.go",
        "dlvFlags": ["--check-go-version=false"],
        "cwd": "${workspaceFolder}/",
        "env": {
          "APP_AWS_ENDPOINT":"http://localhost:4566",
          "APP_AWS_REGION":"sa-east-1",
          "APP_AWS_SSM_LOAD_FROM_SSM":"false",
          "APP_ENVIRONMENT":"local"
        }
      }
    ]
  }