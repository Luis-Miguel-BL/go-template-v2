meta {
  name: auth
  type: http
  seq: 3
}

post {
  url: {{base_url}}/v1/authorization
  body: none
  auth: inherit
}

headers {
  x-api-key: {{api-key}}
}

script:post-response {
  if (res.getStatus() == 200) {
    bru.setEnvVar("access_token",res.getBody().access_token);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
